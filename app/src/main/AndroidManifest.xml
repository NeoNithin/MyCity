<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.appsterden.mycity">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/MyTheme">
        <activity
            android:name=".activities.LaunchScreenActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.CitizenServiceActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name" />
        <activity
            android:name=".activities.PagerActivity"
            android:theme="@style/MyTheme.Detail" />
        <activity android:name=".activities.ThemeActivity" />
        <activity android:name=".activities.HealthcareActivity" />
        <activity android:name=".activities.WasteManagementActivity" />
        <activity android:name=".activities.TransportActivity"></activity>
    </application>

</manifest>